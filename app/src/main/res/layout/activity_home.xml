<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_lukman"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/we_have_recommendation_for_you"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cerita"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        tools:listitem="@layout/list_cerita" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cerita_1"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/rv_cerita"
        tools:listitem="@layout/list_cerita" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cerita_2"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/rv_cerita_1"
        tools:layout_editor_absoluteX="0dp"
        tools:listitem="@layout/list_cerita" />
</androidx.constraintlayout.widget.ConstraintLayout>
